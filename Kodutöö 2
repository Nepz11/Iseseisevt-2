from random import randrange

#2.1 - Bussid
inimesed = int(input("Inimeste arv: "))
kohad = int(input("Kohtade arv: "))
buss = inimesed // kohad
vbuss = inimesed % kohad
if vbuss > 0:
    buss = buss + 1
else:
    print("Liiga palju inimesi")
print("Busse vaja:",buss)
print("Viimases bussis inimesi:",vbuss)


#2.2 - Äratus
arv = int(input("Sisesta mitu korda äratada: "))
for i in range(arv):
    print("Tõuse ja sära")

#2.3 - Murelikud vanemad    
mring = int(input("Sisesta ringide arv: "))
i = 2
porgand = 0
while i <= mring:
    porgand += i
    i += 2
print("Porgandite kogu arv on " + str(porgand))

#2.4 - Täringud
täringud = int(input("Täringute arv: "))
for i in range(1,6):
    print(randrange(1,6))

